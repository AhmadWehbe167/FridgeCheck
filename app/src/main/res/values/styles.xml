<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="stock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="bluetext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#55CCFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heartStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:contentDescription">@string/heart</item>
    </style>

    <style name="main_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/top_round</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
</resources>